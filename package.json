{
  "name": "booking-dashboard",
  "version": "1.0.0",
  "description": "Trek booking dashboard - full stack application",
  "scripts": {
    "client": "cd client && npm run dev",
    "server": "cd server && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install-all": "npm install && npm run install-client && npm run install-server",
    "build": "cd client && npm run build",
    "start-server": "cd server && node server.js",
    "docker:build": "docker build -t booking-dashboard .",
    "docker:run": "docker run -p 4000:4000 --env-file server/.env booking-dashboard",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "booking",
    "dashboard",
    "trek"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
